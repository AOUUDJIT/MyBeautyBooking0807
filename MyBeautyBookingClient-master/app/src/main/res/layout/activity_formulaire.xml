<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/Lunch"
    android:background="@color/colorwhite"
    android:layout_height="match_parent"
    tools:context=".activity.Formulaire">

    <Button
        android:id="@+id/Chercher"
        android:layout_width="289dp"
        android:layout_height="64dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        android:layout_marginBottom="43dp"
        android:background="@color/colorblack"
        android:onClick="onSearch"
        android:text="Recherche"
        android:textColor="@color/colorwhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />
    <LinearLayout
        android:id="@+id/btnlayou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-15dp"
        android:layout_marginEnd="0dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="73dp"
        android:background="@color/colorwhite"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="3">


        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:id="@+id/fra"
            android:layout_height="wrap_content"
            android:background="@drawable/defile2"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="RECHERCHE"
                android:textColor="@color/colorwhite"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView

                android:layout_width="55dp"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="34dp"
                android:padding="6dp"
                android:layout_gravity="right"
                android:src="@drawable/logo2" />

        </FrameLayout>



    </LinearLayout>


    <TextView
        android:id="@+id/TextAdresse"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/frame"
        android:paddingTop="5dp"
        android:layout_marginTop="120dp"
        android:text="Je trouve un professionnel près de chez vous "
        android:textSize="18dp" />

    <EditText
        android:id="@+id/ET_Adresse"
        style="@style/Base.AlertDialog.AppCompat"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@+id/TextAdresse"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="Je rentre mon adresse ou ma ville"
        android:inputType="textPersonName"
        android:textSize="18dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/SeekBarKm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/colorblack"
        android:text="Activer la géolocalisation"
        android:textColor="@color/colorwhite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_above="@+id/Chercher"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="331dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="19dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkBox1"
            style="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Onglerie"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Massage"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Coiffure"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Maquillage"
            android:textSize="20sp" />




    </LinearLayout>


</RelativeLayout>
